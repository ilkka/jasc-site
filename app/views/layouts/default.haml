%html
  %head
    %title= [ @title, "JASC" ].compact.join(" | ")
    = stylesheet_link_tag 'reset', 'default'
    = javascript_include_tag 'jquery', 'application'
    = yield_content :include
  %body
    #page
      #header
        %h1.title= @title
        %ul.menu
          %li= link_to 'Blog', url_for(:posts, :index)
          %li= link_to 'About', url_for(:about)
      #content
        #main
          =yield
        #sidebar
          %h3 Search
          - form_tag url_for(:posts, :index), :method => 'get' do
            = text_field_tag 'query', :value => params[:query]
            = submit_tag 'Search'
          %h3 Latest
          %ul
            %li Foo
            %li Bar
            %li Baz
          %h3 Categories
          %ul
            %li Foo
            %li Bar
            %li Baz
          %h3 Latest comments
          %ul
            %li Foo
            %li Bar
            %li Baz
      #footer
